# LofiGirl Terminal - Environment Configuration Example
# Copy this file to .env and customize the values

# Application Settings
APP_NAME=lofigirl-terminal
APP_VERSION=0.1.0
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Audio Settings
DEFAULT_VOLUME=50  # 0-100
AUDIO_QUALITY=high  # low, medium, high
AUDIO_CACHE_ENABLED=false
AUDIO_CACHE_DIR=.cache/audio

# Network Settings
CONNECTION_TIMEOUT=30  # seconds
RETRY_ATTEMPTS=3
STREAM_BUFFER_SIZE=4096

# UI Settings
THEME=default  # default, dark, light
SHOW_VISUALIZER=true
UPDATE_INTERVAL=1  # seconds

# Default Station
DEFAULT_STATION=lofi-hip-hop

# Development Settings (only for development)
DEBUG_MODE=false
ENABLE_PROFILING=false

# API Keys (if needed in future for streaming services)
# SPOTIFY_CLIENT_ID=your_client_id_here
# YOUTUBE_API_KEY=your_api_key_here
